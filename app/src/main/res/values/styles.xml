<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/starting_screen</item>
        <item name="android:textColorTertiary">@color/colorLightGray</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_medium_material</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>
