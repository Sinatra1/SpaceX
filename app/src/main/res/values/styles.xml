<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/starting_screen</item>
        <item name="android:textColorTertiary">@color/colorLightGray</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="customCardBackgroundColor">@color/colorVeryDarkGray</item>
        <item name="customCardElevation">@dimen/card_elevation</item>
        <item name="customCardCornerRadius">@dimen/card_corner_radius</item>
        <item name="customCardDividerColor">@color/colorDarkGray2</item>
        <item name="customTextIconSize">@dimen/text_icon_size</item>
        <item name="customCardContentPadding">@dimen/medium_padding</item>
        <item name="cardWithListViewSuccessColor">@color/colorGreen</item>
        <item name="cardWithListViewFailColor">@color/colorRed</item>
        <item name="cardWithListViewDividerMarginTop">@dimen/card_list_divider_margin_top</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_medium_material</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>
