<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewHolder"
            type="com.vladislav.shumilov.common_ui.ui.view.cardview_with_list.CardWithListViewTextHolder" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingEnd="@dimen/medium_padding"
            android:text="@{viewHolder.itemText.title}"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Title" />

        <TextView
            android:id="@+id/cardItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/cardItemTitle"
            android:gravity="end"
            android:text="@{viewHolder.itemText.text}"
            tools:text="Text" />
    </RelativeLayout>
</layout>